<Window x:Class="usbArduinoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:usbArduinoGUI"
        mc:Ignorable="d"
        Title="USB Meadow" Height="600" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="165"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <Button x:Name="butt_OpenClose" 
                Content="Open" 
                Click="butt_OpenClose_Click"
                Margin="10,3,10,3"
                Grid.Column="0"
                Grid.Row="0"/>
        <Button x:Name="butt_Clear" 
                Content="Clear" 
                Click="butt_Clear_Click"
                Margin="10,3,10,3"
                Grid.Column="1"
                Grid.Row="0"/>
        <Button x:Name="butt_Send" 
                Content="Send" 
                Margin="10,3,10,3"
                Grid.Column="2"
                Grid.Row="0"/>
        <TextBox x:Name="text_Send" 
                 Grid.Column="3"
                 Grid.Row="0"
                 Width="100"
                 HorizontalAlignment="Left"/>
        <Label Grid.Row="1">Port</Label>
        <ComboBox x:Name="comboBox1"
                  Grid.Column="1"
                  Margin="10,3,10,3"
                  Grid.Row="1"/>

        <Label Grid.Row="2" 
               Grid.ColumnSpan="2" 
               HorizontalAlignment="Center">Packet</Label>
        <Label Grid.Row="2" 
               Grid.ColumnSpan="2" 
               Grid.Column="2"
               HorizontalAlignment="Center">Packet Received</Label>
        <TextBox x:Name="text_packetReceived" 
                 TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto"
                 Grid.Column="2"
                 Grid.Row="3"
                 Grid.RowSpan="16"
                 Width="265" 
                 Grid.ColumnSpan="2" />
        <Label Grid.Row="3">Number</Label>
        <TextBox x:Name="text_packetNumber" 
                 Grid.Column="1"
                 Grid.Row="3"/>
        <Label Grid.Row="4">Length</Label>
        <TextBox x:Name="text_packetLength" 
                 Grid.Column="1"
                 Grid.Row="4"/>

        <Label Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center">Raw Data</Label>
        <Label Grid.Row="6">Analog 0</Label>
        <TextBox x:Name="text_A0" 
                 Grid.Column="1"
                 Grid.Row="6"/>
        <Label Grid.Row="7">Analog 1</Label>
        <TextBox x:Name="text_A1" 
                 Grid.Column="1"
                 Grid.Row="7"/>
        <Label Grid.Row="8">Analog 2</Label>
        <TextBox x:Name="text_A2" 
                 Grid.Column="1"
                 Grid.Row="8"/>
        <Label Grid.Row="9">Analog 3</Label>
        <TextBox x:Name="text_A3" 
                 Grid.Column="1"
                 Grid.Row="9"/>
        <Label Grid.Row="10">Analog 4</Label>
        <TextBox x:Name="text_A4" 
                 Grid.Column="1"
                 Grid.Row="10"/>
        <Label Grid.Row="11">Analog 5</Label>
        <TextBox x:Name="text_A5" 
                 Grid.Column="1"
                 Grid.Row="11"/>
        <Label Grid.Row="12">Binary</Label>
        <TextBox x:Name="text_Binary" 
                 Grid.Column="1"
                 Grid.Row="12"/>

        <Label Grid.Row="13" Grid.ColumnSpan="2" HorizontalAlignment="Center">Checksum</Label>
        <Label Grid.Row="14">Received</Label>
        <TextBox x:Name="text_checkSumReceived" 
                 Grid.Column="1"
                 Grid.Row="14"/>
        <Label Grid.Row="15">Calculated</Label>
        <TextBox x:Name="text_checkSumCalculated" 
                 Grid.Column="1"
                 Grid.Row="15"/>
        <Label Grid.Row="16">Packet Lost</Label>
        <TextBox x:Name="text_packetLost" 
                 Grid.Column="1"
                 Grid.Row="16"/>
        <Label Grid.Row="17">Check Sum Error</Label>
        <TextBox x:Name="text_checkSumError" 
                 Grid.Column="1"
                 Grid.Row="17"/>
        <Label Grid.Row="18">Rollover</Label>
        <TextBox x:Name="text_packetRollover" 
                 Grid.Column="1"
                 Grid.Row="18"/>
    </Grid>

</Window>
